{
  "name": "cross-print-server",
  "version": "1.0.0",
  "description": "Cross-platform print server with WebSocket client and local management API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "cd ../../../ && yarn lint src/packages/base-station",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "pkg:linux": "pkg . --targets node16-linux-x64 --output bin/cross-print-server-linux",
    "pkg:windows": "pkg . --targets node16-win-x64 --output bin/cross-print-server-win.exe",
    "pkg:raspberry": "pkg . --targets node16-linux-armv7 --output bin/cross-print-server-raspberry",
    "build:binaries": "ts-node src/scripts/build-binaries.ts",
    "install:service": "sudo ts-node src/scripts/install-service.ts",
    "build:pi-image": "sudo ts-node src/scripts/build-pi-image.ts",
    "scripts": "ts-node src/scripts/index.ts"
  },
  "bin": "dist/index.js",
  "pkg": {
    "assets": [
      "dist/**/*",
      "config/**/*"
    ],
    "targets": [
      "node16-linux-x64",
      "node16-win-x64",
      "node16-linux-armv7"
    ]
  },
  "keywords": [
    "print-server",
    "websocket",
    "raspberry-pi",
    "cross-platform"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "canvas": "^3.1.0",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ip": "^2.0.1",
    "jsbarcode": "^3.11.6",
    "node-printer": "^1.0.4",
    "onoff": "^6.0.3",
    "qrcode": "^1.5.4",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/ip": "^1.1.3",
    "@types/jsbarcode": "^3.11.4",
    "@types/node": "^22.14.0",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.24.0",
    "pkg": "^5.8.1",
    "supertest": "^7.1.0",
    "vitest": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}