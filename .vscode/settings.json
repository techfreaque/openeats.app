{
  "cSpell.words": [
    "openeats",
    "sovendus",
    "vitest"
  ],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.format.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "prettier.enable": false, // we use eslint for formatting
  "typescript.validate.enable": true,
  "typescript.suggest.autoImports": true,
  "prettier.requireConfig": true,
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "editor.formatOnSave": false
  },
  "files.eol": "\n",
  "files.associations": {
    "schema.prisma.template": "prisma"
  },
  "files.exclude": {
    "postgres_data": true
  }
}