{
  "cSpell.words": [
    "mjml",
    "tsconfigPaths",
    "vitest"
  ],
  "editor.formatOnSave": true, // Format files on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "typescript.suggest.autoImports": true,
  "prettier.requireConfig": true, // Ensure Prettier uses your configuration file
  "files.eol": "\n",
  "files.associations": {
    "schema.prisma.template": "prisma"
  },
  "files.exclude": {
    "postgres_data": true
  },
  "javascript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.importModuleSpecifier": "relative",
  "[javascript][\"eslint.rules\"][\"no-restricted-imports\"]": [
    "error",
    {
      "patterns": [
        "^(?!\\./|\\.\\./)"
      ]
    }
  ]
}